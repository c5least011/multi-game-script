local Players = game:GetService("Players")
local plr = Players.LocalPlayer
local gui = game:GetService("StarterGui")

local function notify(t, txt, dur)
	gui:SetCore("SendNotification", {
		Title = t,
		Text = txt,
		Duration = dur or 3
	})
end

-- WHITELIST (bắt buộc file có .lua)
local allowed = false
local success, wl = pcall(function()
	return loadstring(game:HttpGet("https://raw.githubusercontent.com/c5least011/Vip/main/Gu7gj9Redriih-TghiiTyuo.lua"))()
end)

if success and type(wl) == "table" and wl[plr.UserId] then
	allowed = true
end

if not allowed then
	for i = 1, 5 do
		notify("ACCESS DENIED", "You're not allowed.\nUserId: " .. plr.UserId, 1)
		task.wait(0.3)
	end
	for i = 1, 5 do
		local exp = Instance.new("Explosion")
		exp.BlastPressure = 0
		exp.Position = (plr.Character and plr.Character:FindFirstChild("HumanoidRootPart") or plr.Character or workspace).Position
		exp.Parent = workspace
		task.wait(0.1)
	end
	plr:Kick("You're not whitelisted to use this script. Bye!")
	return
end

-- GAME SCRIPT
local id = game.GameId

if id == 4281211770 then
	notify("LOADING...", "Loading GunGroundFFA script")
	loadstring(game:HttpGet("https://raw.githubusercontent.com/c5least011/Vip/main/GunGroundFFA.lua"))()

elseif id == 6325068386 then
	notify("LOADING...", "Loading Blue Lock script")
	loadstring(game:HttpGet("https://raw.githubusercontent.com/c5least011/Vip/main/C5_BlueKid.lua"))()

elseif id == 3808081382 then
	notify("LOADING...", "Loading TSB script")
	loadstring(game:HttpGet("https://raw.githubusercontent.com/c5least011/TSB/main/FREE"))()

elseif id == 7590997205 then
	notify("LOADING...", "Loading Slapping Tower script")
	loadstring(game:HttpGet("https://raw.githubusercontent.com/c5least011/Vip/main/troll-slapping-tower"))()

else
	notify("Game Check", "Unsupported game", 2)
	task.wait(0.3)
	notify("LOADING...", "Loading Universal script")
	loadstring(game:HttpGet("https://raw.githubusercontent.com/c5least011/Universal/main/3-in-1"))()
end
